<h1>Tasks list</h1>

<ul>
<% @tasks.each do |task| %>
<ol><strong><%= task.title %></strong></ol>
<li><%= link_to "Details", task_path(task)%></li>
<li><%= link_to "Edit task", edit_task_path(task) %></li>
<li><%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
<% end %>
</ul>

<%= link_to "Create new task", new_task_path %> 

