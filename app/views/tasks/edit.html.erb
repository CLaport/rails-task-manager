<h1> Edit a task </h1>

<ul>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.label :completed, "I have completed this task" %>
  <%= f.submit %>
<% end %>
</ul>

<%= link_to "Home", tasks_path %> 